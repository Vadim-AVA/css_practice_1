<header class="header">
    {{#with header}}
        {{> headerDark data = this}} 
    {{/with}}
</header>

<hero class="hero">
    {{#with hero}}    
            <h1 class="hero_title">{{title}}</h1>
            <p class="hero_description">{{description}}</p>
            <a href="{{button.url}}" class="button hero_button">{{button.text}}</a>
    {{/with}}
</hero>

<div class="about">
    {{#with about}}    
            <h2 class="about_heading">{{heading}}</h2>
            <p class="about_info">{{info}}</p>
    {{/with}}
</div>

<div class="articles">
    <div class="articles_title">
        <h2 class="articles_title_name">Our Articles</h2>
        <a href="#" class="articles_button">View All</a>
    </div>
    <div class="new">
        New
    </div>
    <div class="articles_cards">
        {{#each articles}}
            {{> articleCardDark data = this}}  
        {{/each}}
    </div>
</div>


<footer class="footer">
    {{#with footer}}
        {{> footerDark data = this}}   
    {{/with}}
</footer>




